---
import "../styles/global.css";
import { ClientRouter } from 'astro:transitions';
import LoadingIndicator from "astro-loading-indicator/component"

const { title, description } = Astro.props;

const defaultTitle = "Manuel Tonello";
const defaultDescription = "I am a backend developer with a practical and rational approach, driven by curiosity and a constant desire to explore new ideas and perspectives. I focus on building reliable and maintainable systems, with a strong interest in secure coding and long-term sustainability of software. I value methodical work, thoughtful decision-making, and solutions that make sense in practice. I do not chase trends; I focus on what works, what lasts, and what delivers real value.";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<title>{title ?? defaultTitle}</title>
		<meta name="description" content={description ?? defaultDescription} />

		<meta property="og:type" content="website" />
		<meta property="og:title" content={defaultTitle} />
		<meta property="og:description" content={defaultDescription} />

		<ClientRouter />

	</head>
	<body class="font-sans min-h-screen bg-zinc-900">
		<LoadingIndicator color="#f4f4f5" height="2px" />
		<slot />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
